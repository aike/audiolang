
processor SineWave
{
    output stream float out;

	input event
	{
		float Gain [[ min:0, max:1,init:0.3, step: 0.01 ]];
	}

	event Gain(float f) { gain = f; }

	float gain;
    float theta = 0;
    float delta = float (440 * twoPi * processor.period);

    void run()
    {
        loop
        {
            out << sin(theta) * gain;
            theta = addModulo2Pi (theta, delta);
            advance();
        }
    }
}

